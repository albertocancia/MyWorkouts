<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bodybuilding.EserciziActivity">

    <include
        android:id="@+id/tool_bar_esercizi"
        layout="@layout/toolbar"
        ></include>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="600px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="35dp"
            android:text="Serie: "
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txt_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="89dp"
            android:layout_marginTop="35dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="22dp" />


        <TextView
            android:id="@+id/text_view_ripetizioni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="75dp"
            android:text="Ripetizioni: "
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txt_ripetizioni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="141dp"
            android:layout_marginTop="75dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/text_view_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="115dp"
            android:text="Peso: "
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txt_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="91dp"
            android:layout_marginTop="115dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="22dp" />

        <Button
            android:id="@+id/button_aggiorna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="42dp"
            android:text="Aggiorna" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <include
            android:id="@+id/chronometer_es"
            layout="@layout/fragment_timer"></include>
    </LinearLayout>

</LinearLayout>
